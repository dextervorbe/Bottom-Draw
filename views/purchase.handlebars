<div class="newItem-input" class="col-md-6" style="margin: 0 auto;">
  <div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="data:image/png;base64," alt="" width="72" height="57">
    <h1 class="display-5 fw-bold">Check Out</h1>
  </div>

  <form class="form new-item-form" method="post" action="/api/items/purchase">

    <div class="form-group">
      <label for="customer-first-name">First Name:</label>
      <input class="form-input" type="text" id="customer-first-name" value="" name="firstName" />
    </div>
    <div class="form-group">
      <label for="customer-last-name">Last Name: </label>
      <input class="form-input" type="text" id="customer-last-name" value="" name="lastName" />
    </div>
    <div class="form-group">
      <label for="customer-email">Email Address: </label>
      <input class="form-input" type="text" id="customer-email" value="" name="email" />
    </div>
    <div class="form-group">
      <label for="credit-card-nmber">Please enter your 16 digit Credit Card Number</label>
      <input class="form-input" type="text" id="credit-card-number"  name="ccNumber" />
    </div>
    
    <div class="form-group">
      <label for="shipping-method">Shipping</label>
      <Select class="form-input" id="shipping-method" name="shippingMethod" >
        <option value="0">Select a shipping method</option>
        <option value="1">Standard 7-10 Business days</option>
        <option value="2">Express 2-4 Buseiness days</option>
        <option value="3">Overnight 1 Business days</option>
        </Select>
    </div>

    <input type="hidden" value="{{id}}" name="item_id" />
    
    <div class="form-group">
      <button type="submit" class="btn btn-primary custom-buy-btn">Submit</button>
    </div>

  </form>

</div>