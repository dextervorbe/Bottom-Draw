<div class="mb-5 pt-3">


    <h2 class="title pb-4"><strong>Dashboard:Your Items</strong></h2>
    <hr>

    <a href="/item/new"><button class="btn btn-success btn-lg float-left" type="submit">Add New Item</button></a>



    {{#each items as |item| }}
    <div class="col-md-2 column card float-left dasbhboarditems">
        <img src="/images/{{item.image}}" class="img-responsive">
        <a class="producttitle card-link" href="/item/{{item.id}}">{{item.name}}</a>
        <div class="productprice ">
            <a href="/dashboard/edit-item/{{item.id}}"><button id="edit-item-btn" class="btn btn-primary"
                    data-id={{item.id}}>Edit</button></a>
            <button><button id="delete-item-btn" class="btn btn-primary" data-id={{item.id}}>Delete</button>
                <div class="pricetext">${{format_amount item.price}}.00</div>
        </div>
    </div>
    {{/each}}

</div>