  <link rel="stylesheet" href="style.css">
</head>

<body>
  <nav class="navbar sticky-top navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand">OCTO</a>
      <form class="d-flex">
        <div class="input-group input-group-rounded">
          <input class="input-group-field" type="search" placeholder="Search for items, brands, styles, ect...">
        </div>
      </form>
      <form class="justify-content-end">
        {{#if logged_in}}
        <a href="/dashboard">Hi there, {{ user.name }}</a>
        {{else}}
        <button class="btn btn-outline-success me-2" type="button">Log In</button>
        {{/if}}
      </form>
    </div>
  </nav>

  <!-- Render the sub layout -->
  {{{ body }}}

  <footer>
    {{!-- need footer --}}
  </footer>

</body>

</html>