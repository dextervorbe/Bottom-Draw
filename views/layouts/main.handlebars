<body>
  <nav class=" navbar sticky-top navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">OCTO</a>
      <form class="d-flex">
        <div class="input-group input-group-rounded">
          <input class="input-group-field" type="search" placeholder="Search for items, brands, styles, ect...">
        </div>
    
      </form>
      <div class="justify-content-end btn-group">
        {{#if logged_in}}
        <a href="/dashboard" class=" btn btn-outline-success">Dashboard</a>
        <button id="logout" class="btn  btn-outline-success" style="color: white">logout</button>
        {{else}}
        <button class="btn btn-outline-success me-2" type="button" onclick= "window.location.href='/login'">Log In</button>
        {{/if}}
      </div>
    </div>
  </nav>

  <!-- Render the sub layout -->
  {{{ body }}}

  <footer>
    {{!-- need footer --}}
  </footer>

  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  <script src="/js/deleteItem.js"></script>
  {{/if}}
</body>

</html>