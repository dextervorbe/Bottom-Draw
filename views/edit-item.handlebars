<div class="newItem-input container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse g-5 py-5">
        <div class="col-lg-6">
            <div>
              <h1 class="display-5 fw-bold lh-1 mb-3">Edit Item</h1>
              {{#each items as |item| }}
              <form class="form new-item-form" method="post" action="/api/items/update/{{item.id}}">

                <div class="form-group">
                  <label for="item-name">Item name: </label>
                  <input class="form-input" type="text" id="item-name" name="name" value={{item.name}} />
                </div>
                <div class="form-group">
                  <label for="item-description">Description: </label>
                  <input class="form-input" type="text" id="item-description" name="description" value={{item.description}} />
                </div>
                <div class="form-group">
                  <label for="item-price">Price: </label>
                  <input class="form-input" type="text" id="item-price" name="price" value={{item.price}} />
                </div>
                <div class="form-group">
                  <label for="item-size-number">Size Number: </label>
                  <input class="form-input" type="number" id="item-size-number" name="size_number" value={{item.size_number}} />
                </div>
                <div class="form-group">
                  <label for="item-size-letter">Size Letter: </label>
                  <input class="form-input" type="text" id="item-size-letter" name="size_letter" value={{item.size_letter}} />
                </div>
                <div class="form-group">
                  <label for="item-image">Image Name: </label>
                  <input class="form-input" type="text" id="item-image" name="image" value={{item.image}} />
                </div>

                {{/each}}
                <div class="form-group">
                  <button type="submit" class="btn btn-primary custom-buy-btn">Save</button>
                </div>

              </form>
            </div>
        </div>
        <div class="col-10 col-sm-8 col-lg-6">
            {{#each items as |item| }}
            <img src="{{image}}" class="d-block mx-lg-auto img-fluid" alt="Item Image" width="700" height="500" loading="lazy">
            {{/each}}
        </div>
    </div>
</div>

